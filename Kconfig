
choice TINY_PLATFORM
	prompt "BUILD System"
	default ESP_PLATFORM if IDF_CMAKE
	default ZEPHYR_PLATFORM if ZEPHYR_CMSIS_MODULE
	help
		Use this option in Kconfig to select in if statement the platform to build for.
config ZEPHYR_PLATFORM
	bool "Zephyr"
	help
		Zephyr RTOS platform.
config ESP_PLATFORM
	bool "ESP"
	help
		ESP32 platform.
endchoice

menu "Tiny configuration"

	config TINY_LOG
		bool "Enable logging"
		default "y"
		help
			Selects whether tinyplatform logs messages.

	config TINY_ASSERTS
		bool "Enable asserts"
		default "y"
		help
			Selects whether tinyplatform performs runtime assert checks.
choice TINY_LOG_LEVEL_CHOICE
	prompt "Tiny stack log level"
	depends on TINY_DEBUG
	help
	  This option selects log level for Tiny stack.

config TINY_LOG_LEVEL_CRIT
	bool "Critical"
config TINY_LOG_LEVEL_WARN
	bool "Warning"
config TINY_LOG_LEVEL_NOTE
	bool "Notice"
config TINY_LOG_LEVEL_INFO
	bool "Informational"
config TINY_LOG_LEVEL_DEBG
	bool "Debug"
endchoice # TINY_LOG_LEVEL_CHOICE

config TINY_LOG_LEVEL
	int
	default 1 if TINY_LOG_LEVEL_CRIT
	default 2 if TINY_LOG_LEVEL_WARN
	default 3 if TINY_LOG_LEVEL_NOTE
	default 4 if TINY_LOG_LEVEL_INFO
	default 5 if TINY_LOG_LEVEL_DEBG
	default 4
	help
	  Log level for Tiny stack.


endmenu

